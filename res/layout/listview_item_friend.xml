<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
      xmlns:android="http://schemas.android.com/apk/res/android"
       xmlns:app="http://schemas.android.com/apk/res/com.socialapp.heyya"
      android:id="@+id/friend_item_cardview"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      app:cardCornerRadius="6dp"
      app:cardElevation="6dp"
      android:layout_margin="5dp">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:padding="2dp"
    android:background="@drawable/listview_item_background">

     <RelativeLayout
         android:id="@+id/friend_item_layout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true">
        <com.socialapp.heyya.customview.RoundedImageView
	    	android:id="@+id/friend_item_imageview_avt"
	    	android:layout_width="@dimen/image_view_avt_width"
	    	android:layout_height="@dimen/image_view_avt_height"
	    	app:corner_radius="12dp"
	    	app:border_width="2dp"
	    	app:border_color="@color/gray1"
	    	app:mutate_background="true"
	    	android:src="@drawable/default_avt_image"/>
	    <TextView 
	        android:id="@+id/friend_item_textview_friend_name"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginStart="15dp"
	        android:layout_marginLeft="15dp"
	        android:textColor="@android:color/black"
	        android:layout_toEndOf="@id/friend_item_imageview_avt"
	        android:layout_toRightOf="@id/friend_item_imageview_avt"
	        android:textSize="@dimen/friend_item_textview_name_size"
	        android:layout_centerVertical="true"
	        android:ellipsize="end"
	        android:singleLine="true"/>
	    <TextView 
	        android:id="@+id/friend_item_textview_sent_requested"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_toEndOf="@id/friend_item_imageview_avt"
	        android:layout_toRightOf="@id/friend_item_imageview_avt"
	        android:layout_alignParentBottom="true"
	        android:layout_marginStart="15dp"
	        android:layout_marginLeft="15dp"
	        android:textColor="@android:color/black"
	        android:textSize="@dimen/friend_item_textview_send_request_size"
	        android:text="@string/fragment_friend_textview_request_sent"
	        android:visibility="gone"/>
	    
    </RelativeLayout>
        <LinearLayout
            android:id="@+id/friend_item_layout2"
	    	android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:layout_alignParentEnd="true"
	    	android:layout_alignParentRight="true"
	    	android:orientation="horizontal"
	    	android:layout_centerVertical="true">
	    
            <android.support.design.widget.FloatingActionButton
            android:id="@+id/friend_item_button_accept"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fabSize="mini" 
   		   android:src="@drawable/ok_image"
           />
            
            <android.support.design.widget.FloatingActionButton
            android:id="@+id/friend_item_button_ignore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fabSize="mini" 
   		    android:src="@drawable/cancel_image"/>            
     
	</LinearLayout>
</RelativeLayout>
</android.support.v7.widget.CardView>