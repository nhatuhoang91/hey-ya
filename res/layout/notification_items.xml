<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
      xmlns:android="http://schemas.android.com/apk/res/android"
      xmlns:app="http://schemas.android.com/apk/res/com.socialapp.heyya"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
	app:cardCornerRadius="6dp"
	app:cardElevation="6dp"	      
       >
<RelativeLayout 
    android:id="@+id/notification_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" 
    android:layout_margin="5dp"
    android:padding="2dp"> 
 <com.socialapp.heyya.customview.RoundedImageView
        android:id="@+id/notification_item_imageview_avt"
        android:layout_width="@dimen/image_view_avt_width"
        android:layout_height="@dimen/image_view_avt_height"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:src="@drawable/default_avt_image"
         app:corner_radius="12dp"
     app:mutate_background="true"
     app:border_width="2dp"
	    	app:border_color="@color/gray1"
     />
 
    <RelativeLayout 
        android:id="@+id/notification_item_layout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_toEndOf="@+id/notification_item_imageview_avt"
        android:layout_toRightOf="@+id/notification_item_imageview_avt">
        <TextView 
            android:id="@+id/notification_item_textview_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/notification_item_textview_name_size"
            android:textColor="@android:color/black"
            android:layout_centerInParent="true"/>
        <LinearLayout 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/notification_item_textview_name">
         
       		 <TextView 
            android:id="@+id/notification_item_textview_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="@dimen/notification_item_textview_state_size"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"/>
        </LinearLayout>
    </RelativeLayout>
    
    <TextView 
        android:id="@+id/notification_item_textview_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:textColor="@android:color/black"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"/>
</RelativeLayout>
</android.support.v7.widget.CardView>