<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_background"
    tools:context="com.socialapp.heyya.ui.signupactivity.SignUpNextActivity"
    >
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:padding="10dp" >
   
        <com.socialapp.heyya.customview.RoundedImageView
             xmlns:app="http://schemas.android.com/apk/res/com.socialapp.heyya"
            android:id="@+id/signup_imageview"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/default_avt_image"
            android:layout_centerHorizontal="true"
            android:scaleType="fitXY"
            app:corner_radius="20dp"
            app:mutate_background="true"
            android:onClick="onClickGetImage"/>
        <android.support.design.widget.FloatingActionButton
           	android:id="@+id/signup_button_rotate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fabSize="normal" 
           	android:layout_centerHorizontal="true"
           	android:layout_below="@id/signup_imageview"
           	android:src="@drawable/rotate_icon_mage"
           	 android:onClick="onClickRotate"
        />
        <LinearLayout 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:layout_below="@id/signup_button_rotate">
                <RelativeLayout 
	        		android:layout_width="wrap_content"
	        		android:layout_height="wrap_content"
	        		android:layout_weight="1">
	        			<android.support.design.widget.FloatingActionButton
           					android:id="@+id/signup_button_back"
            				android:layout_width="wrap_content"
            				android:layout_height="wrap_content"
            				app:fabSize="normal" 
            				android:src="@drawable/back_image"
           					android:layout_centerHorizontal="true"
           					android:onClick="onClickBack"
           				/>
	    		</RelativeLayout>
	    		<RelativeLayout 
	        		android:layout_width="wrap_content"
	        		android:layout_height="wrap_content"
	        		android:layout_weight="1">
	          			<android.support.design.widget.FloatingActionButton
             				android:id="@+id/signup_button_signup"
            				android:layout_width="wrap_content"
            				android:layout_height="wrap_content"
            				app:fabSize="normal" 
            				android:src="@drawable/ok_image"
           					android:layout_centerHorizontal="true"
           					android:onClick="onClickSignUp"/>
	    		</RelativeLayout>
          </LinearLayout>
    </RelativeLayout>

</RelativeLayout>
</android.support.design.widget.CoordinatorLayout>